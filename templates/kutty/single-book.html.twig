                        <!-- Image gallery -->
                        <div class="mt-4 lg:col-span-3 lg:col-start-1 lg:row-span-3 lg:row-start-1 lg:mt-0">
                            <h2 class="sr-only">Images</h2>
                            <div class="grid grid-cols-1">
                                {% set thumbnail = entity.getThumbnail() %}
                                {% if thumbnail %}
                                <img src="{{ asset(thumbnail.url) }}" alt="{{ entity.getTitle() }}" width="172" class="lg:col-span-2 lg:row-span-2 rounded-lg">
                                {% endif %}
                            </div>
                        </div>

                        <div class="mt-4 lg:col-span-9">
                            <!-- Product details -->
                            <h2 class="sr-only">Description</h2>
                            <div class="prose prose-sm mt-4 text-slate-700 dark:text-slate-300">
                                <p>{{ entity.getExcerpt() }}</p>
                            </div>
                        </div>
                    </div>
                </div>
                {% set tags = entity.getTags() %}
                {% set tagSets = [] %}
                {% if tags|length > 0 %}
                <div class="mt-4 text-center">
                    <ul class="flex justify-center flex-wrap">
                        {% for tag in tags %}
                        {% set tagSets = tagSets|merge([tag.getId()])%}
                        <li class="text-slate-600 dark:text-slate-400 border border-slate-200 bg-slate-100 dark:border-slate-800 dark:bg-slate-800 hover:bg-slate-300 dark:hover:bg-slate-700 rounded-lg mx-2 mb-2 py-1 px-2.5">
                            <a class="tag" href="{{ permalink(tag) }}" target="_blank">{{ tag.getName() }}</a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}

                {% set chapters = entity.getChildren() %}
                <div class="bg-white dark:bg-slate-800 rounded-md mt-16">
                    <div class="border-b border-slate-200 dark:border-slate-900 px-4 py-5">
                        <div class="flex items-center">
                            <h3 class="text-lg font-medium leading-8 text-slate-700 dark:text-slate-300">
                                目录大纲<span class="text-sm text-slate-400">({{ chapters|length }}章)</span>
                            </h3>
                        </div>
                        <div class="flex">
                        </div>
                    </div>
{#                    <div class="indent-8 leading-8 px-4 py-5 text-slate-700 dark:text-slate-400">#}
                    <div class="px-4">
                        <ul class="lg:grid lg:auto-rows-min lg:grid-cols-2 lg:gap-x-8">
                            {% for chapter in chapters %}
                            <li class="py-5 text-base font-medium text-slate-900 dark:text-slate-200">
                                <a href="{{ permalink(chapter) }}" class="hover:underline">{{ loop.index }}，{{ chapter.getTitle() }}</a>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>

                <div class="bg-white dark:bg-slate-800 rounded-md mt-16">
                    <div class="border-b border-slate-200 dark:border-slate-900 px-4 py-5">
                        <div class="flex items-center">
                            {% set author = entity.getAuthor() %}
                            <div class="flex-shrink-0">
                                {% if author.avatar %}
                                    <img class="h-12 w-12 rounded-full" src="{{ asset(author.avatar) }}" alt="">
                                {% endif %}
                            </div>
                            <div {% if author.avatar %} class="ml-2" {% endif %}>
                                {% set dynastyId = dynasty(author) %}
                                <h3 class="text-lg font-medium leading-8 text-slate-700 dark:text-slate-300">
                                    {{ author.getNickname() }}
                                    {% if dynastyId %}
                                        {% set dynasty = taxonomy(dynastyId) %}
                                        {% if dynasty %}
                                            <span class="text-sm text-slate-400">[{{ dynasty.name }}]</span>
                                        {% endif %}
                                    {% endif %}
                                </h3>
                                <p class="text-sm text-slate-700">
                                </p>
                            </div>
                        </div>
                        <div class="flex">
                        </div>
                    </div>
                    <div class="indent-8 leading-8 px-4 py-5 text-slate-700 dark:text-slate-400">
                        {% set description = author.getMeta('description') %}
                        {% if description %}
                            {{ description.getMetaValue() }}
                        {% endif %}
                    </div>
                </div>

                {% set authorEntities = widget('high_author_posts', {author: author.id}) %}
                <div class="bg-white  dark:bg-slate-800 rounded-md mt-16">
                    <div class="border-b border-slate-200 dark:border-slate-900 px-4 py-5">
                        <div class="flex justify-between items-center">
                            <h3 class="text-lg font-medium leading-8 text-slate-700 dark:text-slate-300">{{ author.getNickname() }}最受欢迎作品</h3>
                            <div class="flex"></div>
                        </div>
                    </div>
                    <div>
                    <ul>
                        {% for item in authorEntities %}
                            <li class="truncate px-4 py-2 border-b border-slate-200 dark:border-slate-900 last:border-0 flex items-center">
                                <span class="block rounded-full  w-5 h-5 text-white text-center {% if loop.index == 1 %} bg-yellow-500 {% elseif loop.index == 2 %} bg-stone-300 {% elseif loop.index == 3 %} bg-amber-900 {% endif %}">{% if loop.index < 4 %}{{ loop.index }}{% endif %}</span>
                                <h3 class="truncate text-base leading-8 text-slate-900 dark:text-slate-400 ml-2">
                                    <a class="hover:underline" href="{{ permalink(item) }}">{{ item.getTitle() }}</a>
                                </h3>
                            </li>
                        {% endfor %}
                    </ul>
                    </div>
                </div>

                <div class="bg-white dark:bg-slate-800 rounded-md mt-16">
                    <div class="border-b border-slate-200 dark:border-slate-900 px-4 py-5">
                        <div class="flex justify-between items-center">
                            <h3 class="text-lg font-medium leading-8 text-slate-700 dark:text-slate-300">最受欢迎作品</h3>
                            <div class="flex"></div>
                        </div>
                    </div>
                    <div>
                        <ul>
                            {% set entities = widget('high_posts') %}
                            {% for item in entities %}
                                <li class="truncate px-4 py-2 border-b border-slate-200 dark:border-slate-900 last:border-0 flex items-center">
                                    <span class="block rounded-full w-5 h-5 text-white text-center {% if loop.index == 1 %} bg-yellow-500 {% elseif loop.index == 2 %} bg-stone-300 {% elseif loop.index == 3 %} bg-amber-900 {% endif %}">{% if loop.index < 4 %}{{ loop.index }}{% endif %}</span>
                                    <h3 class="truncate text-base leading-8 text-slate-900 dark:text-slate-400 ml-2">
                                        <a class="hover:underline" href="{{ permalink(item) }}">{{ item.getTitle() }}</a>
                                    </h3>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>

                <div class="bg-white dark:bg-slate-800 rounded-md mt-16">
                    <div class="border-b border-slate-200 dark:border-slate-900 px-4 py-5">
                        <div class="flex justify-between items-center">
                            <h3 class="text-lg font-medium leading-8 text-slate-700 dark:text-slate-300">相关作品推荐</h3>
                            <div class="flex"></div>
                        </div>
                    </div>
                    <div>
                        <ul>
                            {% set entities = get_taxonomy_posts(tagSets, {limit: 20}) %}
                            {% for item in entities %}
                                <li class="truncate px-4 py-2 border-b border-slate-200 dark:border-slate-900 last:border-0 flex items-center">
                                    <h3 class="truncate text-base leading-8 text-slate-900 dark:text-slate-400">
                                        <a class="hover:underline" href="{{ permalink(item) }}">{{ item.getTitle() }}</a>
                                    </h3>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>


                {% set previousNextWg = widget('previous_next', {entity: entity}) %}
                {% if previousNextWg %}
                    {% set previousNext = previousNextWg.getContext() %}
                    <div class="flex justify-between mt-2 flex-col sm:flex-row">
                        {% if previousNext['previous'] %}
                            <span class="text-slate-700 dark:text-slate-300">
                                上一篇:
                                <a class="hover:underline" href="{{ permalink(previousNext['previous']) }}">
                                    {{ previousNext['previous'].getTitle() }}
                                </a>
                            </span>
                        {% endif %}
                        {% if previousNext['next'] %}
                            <span class="text-slate-700 dark:text-slate-300">
                                下一篇:
                                <a class="hover:underline" href="{{ permalink(previousNext['next']) }}">
                                    {{ previousNext['next'].getTitle() }}
                                </a>
                            </span>
                        {% endif %}
                    </div>
                {% endif %}

            </div>
        </div>
    </section>
{% endblock %}
