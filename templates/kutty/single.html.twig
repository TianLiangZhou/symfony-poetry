{% extends layout %}

{% block body %}
    {% set keyword = site_keywords|default('')|split(',')[0] %}
    <section>
        <div class="relative isolate px-6 pt-14 lg:px-8">
            <div class="mx-auto max-w-3xl">
                {{ widget('breadcrumb', {template: 'kutty/breadcrumb.html.twig'}) }}
            </div>
        </div>
    </section>
    <section>
        <div class="relative isolate px-6 pt-4 lg:px-8">
            <div class="relative mx-auto max-w-3xl overflow-hidden">
                <div class="py-16 bg-white dark:bg-slate-800 rounded-md">
                    <article class="{% if entity.getType() == 'post' %} text-center {% endif %}">
                        {% if entity %}
                            <h1 class="text-4xl text-center px-4 font-bold tracking-tight text-slate-900 dark:text-slate-200 sm:text-6xl">{{ entity.title }}</h1>
                            <p class="mt-6 text-lg leading-8 text-center text-slate-500 dark:text-slate-400">
                                {% set author = entity.getAuthor() %}
                                {% set dynastyId = dynasty(author) %}
                                {% if dynastyId %}
                                    {% set dynasty = taxonomy(dynastyId) %}
                                    {% if dynasty %}
                                        <span class="text-sm leading-8 text-gray-400">【{{ dynasty.name }}】</span>
                                    {% endif %}
                                {% endif %}
                                <a href="{{ permalink(author) }}" class="hover:underline">{{ author.getNickname() }}</a>
                            </p>
                            {% set content = entity.content|split('{br}') %}
                            {% for word in content %}
                                <p class="indent-8 mt-6 px-4 text-lg leading-8 text-slate-700 dark:text-slate-300">{{ word }}</p>
                            {% endfor %}
                        {% endif %}
                    </article>
                </div>
                {% set tags = entity.getTags() %}
                {% set tagSets = [] %}
                {% if tags|length > 0 %}
                <div class="mt-4 text-center">
                    <ul class="flex justify-center flex-wrap">
                        {% for tag in tags %}
                        {% set tagSets = tagSets|merge([tag.getId()])%}
                        <li class="text-slate-600 dark:text-slate-400 border border-slate-200 bg-slate-100 dark:border-slate-800 dark:bg-slate-800 hover:bg-slate-300 dark:hover:bg-slate-700 rounded-lg mx-2 mb-2 py-1 px-2.5">
                            <a class="tag" href="{{ permalink(tag) }}" target="_blank">{{ tag.getName() }}</a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}
                <div class="bg-white dark:bg-slate-800 rounded-md mt-16">
                    <div class="border-b border-slate-200 dark:border-slate-900 px-4 py-5">
                        <div class="flex items-center">
                            {% set author = entity.getAuthor() %}
                            <div class="flex-shrink-0">
                                {% if author.avatar %}
                                    <img class="h-12 w-12 rounded-full" src="{{ asset(author.avatar) }}" alt="">
                                {% endif %}
                            </div>
                            <div {% if author.avatar %} class="ml-2" {% endif %}>
                                {% set dynastyId = dynasty(author) %}
                                <h3 class="text-lg font-medium leading-8 text-slate-700 dark:text-slate-300">
                                    {{ author.getNickname() }}
                                    {% if dynastyId %}
                                        {% set dynasty = taxonomy(dynastyId) %}
                                        {% if dynasty %}
                                            <span class="text-sm text-slate-400">[{{ dynasty.name }}]</span>
                                        {% endif %}
                                    {% endif %}
                                </h3>
                                <p class="text-sm text-slate-700">
                                </p>
                            </div>
                        </div>
                        <div class="flex">
                        </div>
                    </div>
                    <div class="indent-8 leading-8 px-4 py-5 text-slate-700 dark:text-slate-400">
                        {% set description = author.getMeta('description') %}
                        {% if description %}
                            {{ description.getMetaValue() }}
                        {% endif %}
                    </div>
                </div>


                <div class="bg-white  dark:bg-slate-800 rounded-md mt-16">
                    <div class="border-b border-slate-200 dark:border-slate-900 px-4 py-5">
                        <h3 class="text-lg font-medium leading-8 text-slate-700 dark:text-slate-300">{{ entity.getTitle() }} - 译文</h3>
                        <div class="flex">
                        </div>
                    </div>
                    <div class="px-4 py-5 text-slate-700 dark:text-slate-400">
                        {% set translation = entity.getMeta('translation') %}
                        {% if translation %}
                            {% set values = translation.getMetaValue() %}
                            {% for line in values|split('{br}') %}
                                <p class="indent-8 mt-6 first:mt-0 leading-8">{{ line }}</p>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>

                <div class="bg-white  dark:bg-slate-800 rounded-md mt-16">
                    <div class="border-b border-slate-200 dark:border-slate-900 px-4 py-5">
                        <div class="flex justify-between items-center">
                            <h3 class="text-lg font-medium leading-8 text-slate-700 dark:text-slate-300">{{ entity.getTitle() }} - 注释</h3>
                            <div class="flex">
                            </div>
                        </div>
                    </div>
                    <div class="px-4 py-5 text-slate-700 dark:text-slate-400">
                        {% set comment = entity.getMeta('comment') %}
                        {% if comment %}
                            {% set values = comment.getMetaValue() %}
                            {% for line in values|split('{br}') %}
                                <p class="mt-6 first:mt-0 leading-8">{{ line }}</p>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>


                {% set authorEntities = widget('high_author_posts', {author: author.id}) %}
                <div class="bg-white  dark:bg-slate-800 rounded-md mt-16">
                    <div class="border-b border-slate-200 dark:border-slate-900 px-4 py-5">
                        <div class="flex justify-between items-center">
                            <h3 class="text-lg font-medium leading-8 text-slate-700 dark:text-slate-300">{{ author.getNickname() }}最受欢迎{{ keyword }}</h3>
                            <div class="flex"></div>
                        </div>
                    </div>
                    <div>
                    <ul>
                        {% for item in authorEntities %}
                            <li class="truncate px-4 py-2 border-b border-slate-200 dark:border-slate-900 last:border-0 flex items-center">
                                <span class="block rounded-full  w-5 h-5 text-white text-center {% if loop.index == 1 %} bg-yellow-500 {% elseif loop.index == 2 %} bg-stone-300 {% elseif loop.index == 3 %} bg-amber-900 {% endif %}">{% if loop.index < 4 %}{{ loop.index }}{% endif %}</span>
                                <h3 class="truncate text-base leading-8 text-slate-900 dark:text-slate-400 ml-2">
                                    <a class="hover:underline" href="{{ permalink(item) }}">{{ item.getTitle() }}</a>
                                </h3>
                            </li>
                        {% endfor %}
                    </ul>
                    </div>
                </div>

                <div class="bg-white dark:bg-slate-800 rounded-md mt-16">
                    <div class="border-b border-slate-200 dark:border-slate-900 px-4 py-5">
                        <div class="flex justify-between items-center">
                            <h3 class="text-lg font-medium leading-8 text-slate-700 dark:text-slate-300">最受欢迎{{ keyword }}</h3>
                            <div class="flex"></div>
                        </div>
                    </div>
                    <div>
                        <ul>
                            {% set entities = widget('high_posts') %}
                            {% for item in entities %}
                                <li class="truncate px-4 py-2 border-b border-slate-200 dark:border-slate-900 last:border-0 flex items-center">
                                    <span class="block rounded-full w-5 h-5 text-white text-center {% if loop.index == 1 %} bg-yellow-500 {% elseif loop.index == 2 %} bg-stone-300 {% elseif loop.index == 3 %} bg-amber-900 {% endif %}">{% if loop.index < 4 %}{{ loop.index }}{% endif %}</span>
                                    <h3 class="truncate text-base leading-8 text-slate-900 dark:text-slate-400 ml-2">
                                        <a class="hover:underline" href="{{ permalink(item) }}">{{ item.getTitle() }}</a>
                                    </h3>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>

                <div class="bg-white dark:bg-slate-800 rounded-md mt-16">
                    <div class="border-b border-slate-200 dark:border-slate-900 px-4 py-5">
                        <div class="flex justify-between items-center">
                            <h3 class="text-lg font-medium leading-8 text-slate-700 dark:text-slate-300">相关{{ keyword }}推荐</h3>
                            <div class="flex"></div>
                        </div>
                    </div>
                    <div>
                        <ul>
                            {% set entities = get_taxonomy_posts(tagSets, {limit: 20}) %}
                            {% for item in entities %}
                                <li class="truncate px-4 py-2 border-b border-slate-200 dark:border-slate-900 last:border-0 flex items-center">
                                    <h3 class="truncate text-base leading-8 text-slate-900 dark:text-slate-400">
                                        <a class="hover:underline" href="{{ permalink(item) }}">{{ item.getTitle() }}</a>
                                    </h3>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>


                {% set previousNextWg = widget('previous_next', {entity: entity}) %}
                {% if previousNextWg %}
                    {% set previousNext = previousNextWg.getContext() %}
                    <div class="flex justify-between mt-2 flex-col sm:flex-row">
                        {% if previousNext['previous'] %}
                            <span class="text-slate-700 dark:text-slate-300">
                                上一篇:
                                <a class="hover:underline" href="{{ permalink(previousNext['previous']) }}">
                                    {{ previousNext['previous'].getTitle() }}
                                </a>
                            </span>
                        {% endif %}
                        {% if previousNext['next'] %}
                            <span class="text-slate-700 dark:text-slate-300">
                                下一篇:
                                <a class="hover:underline" href="{{ permalink(previousNext['next']) }}">
                                    {{ previousNext['next'].getTitle() }}
                                </a>
                            </span>
                        {% endif %}
                    </div>
                {% endif %}

            </div>
        </div>
    </section>
{% endblock %}
